{
  "name": "MyFirstBootstrapWebsite",
  "version": "2.0.6",
  "author": "Daniel Srb",
  "license": "MIT",
  "description": "A basic template to start a website based on Bootstrap 5",
  "repository": {
    "type": "git",
    "url": "https://github.com/benabraham/bs5-static-site-starter"
  },
  "engines": {
    "node": "20"
  },
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "browserslist --update-db && gulp develop",
    "build": "browserslist --update-db && gulp build",
    "deploy": "browserslist --update-db && gulp build && surge dist --domain \"https://my-first-bootstrap-5-website.surge.sh\""
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "bootstrap": "^5.3.0",
    "browser-sync": "^2.29.3",
    "del": "^7.0.0",
    "gulp": "^4.0.2",
    "gulp-csso": "^4.0.1",
    "gulp-dart-sass": "^1.1.0",
    "gulp-nunjucks": "^5.1.0",
    "gulp-postcss": "^9.0.1",
    "gulp-sourcemaps": "^3.0.0",
    "postcss": "^8.4.24",
    "postcss-uncss": "^0.17.0",
    "prettier": "^2.8.8",
    "sass": "^1.62.1",
    "surge": "^0.23.1",
    "uncss": "^0.17.3"
  },
  "prettier": {
    "tabWidth": 4,
    "printWidth": 120,
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "tabWidth": 2
        }
      }
    ]
  },
  "browserslist": [
    ">= 0.5%",
    "last 2 major versions",
    "not dead",
    "Chrome >= 60",
    "Firefox >= 60",
    "Firefox ESR",
    "iOS >= 12",
    "Safari >= 12",
    "not Explorer <= 11"
  ]
}
